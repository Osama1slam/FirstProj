<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.osamaislam.auxiliarit.AboutMe">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/ppicture"
        android:src="@drawable/osamapic"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ppicture"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:   "
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Osama Islam"
                android:textSize="20dp"
                android:textColor="#0090cc"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:   "
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="110040441"
                android:textSize="20dp"
                android:textColor="#0090cc"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:   "
                android:textSize="20dp"
                android:id="@+id/textView2"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="osama40441@gmail.com"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textColor="#0090cc"
                android:id="@+id/textView7"
                android:onClick="myEmail"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program:"
                android:textSize="20sp"
                android:id="@+id/textView3"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software Engineering with Multimedia"
                android:textSize="20sp"
                android:textColor="#0090cc"
                android:id="@+id/textView4"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester:"
                android:textSize="20dp"
                android:id="@+id/textView70"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 - At August 2016"
                android:textSize="20sp"
                android:textColor="#0090cc"
                android:id="@+id/textView71"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:textSize="20dp"
                android:id="@+id/textView72"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textSize="20sp"
                android:textColor="#000"
                android:id="@+id/textView73"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:onClick="osamaFace"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#333"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
