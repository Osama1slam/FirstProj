<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lecturers_pages.matthewPage"
    android:background="#000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/waelPic"
            android:src="@drawable/matthew"
            android:scaleType="fitXY"/>

        <ScrollView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="20sp"
                        android:id="@+id/name"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/waelName"
                        android:text="Mr. Matthew"
                        android:layout_marginTop="5dp"
                        android:textSize="40sp"
                        android:textColor="@android:color/holo_blue_dark"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty Position:"
                        android:textSize="20sp"
                        android:id="@+id/wPos"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/w_Pos"
                        android:text="Year Leader"
                        android:layout_marginTop="5dp"
                        android:textSize="30sp"
                        android:textColor="@android:color/holo_blue_dark"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Module given:"
                        android:textSize="20sp"
                        android:id="@+id/wMod"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/w_Mod"
                        android:text="Multimedia Authoring"
                        android:layout_marginTop="5dp"
                        android:textSize="30sp"
                        android:textColor="@android:color/holo_blue_dark"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extension:"
                        android:textSize="20sp"
                        android:id="@+id/textView27"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29"
                        android:text="8402"
                        android:layout_marginTop="5dp"
                        android:textSize="30sp"
                        android:textColor="@android:color/holo_blue_dark" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact:"
                            android:textSize="20sp"
                            android:id="@+id/textView57" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView59"
                            android:text="matthew@limkokwing .edu.my"
                            android:layout_marginTop="5dp"
                            android:textSize="23dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_dialog_email"
                        android:background="#000"
                        android:id="@+id/Email"
                        android:layout_weight="1"
                        android:onClick="sendMatt"
                        />

                    <TextView
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:background="@android:color/holo_blue_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/face"
                        android:text="Facebook"
                        android:gravity="center"
                        android:onClick="mattFace"/>



                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
